<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= homeContent %></p>

<% posts.forEach(post => { %>
  <h3>
    <a style="text-decoration: none; color: inherit;" href="/posts/<%= post.title %>">
    <%= post.title %></h3>
    </a>
  <% if (post.content.length >= 100) { %>
    <p>
      <%= post.content.substring(0, 100) + " ..." %>
      <a href="/posts/<%= post.title %>">Read More</a>
    </p>
  <% } else { %>
    <p><%= post.content %></p>
  <% } %>
<% }) %>

<%- include("partials/footer") -%>